extends ../layout
block head
  script(src="/js/auth/signinup.js")
block content
  form.form.form-horizontal
    .form-group
      label.col-sm-2(for="username") 用户名:
      .col-sm-8
        input.form-control#username(name="username", type="text", placeholder="你的大名供人膜拜")
    .form-group
      label.col-sm-2(for="password") 密码:
      .col-sm-8
        input.form-control#password(name="password", type="password")
    .form-group
      button.col-sm-offset-3.col-sm-2.btn.btn-primary.login(type="button") 登录
      button.col-sm-offset-1.col-sm-2.btn.btn-success.signup(type="button") 注册